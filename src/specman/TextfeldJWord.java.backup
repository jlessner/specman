package nassi.formlayout;

import javax.swing.text.BadLocationException;
import javax.swing.text.SimpleAttributeSet;
import javax.swing.text.StyleConstants;

import com.pilot.jword.ContentTree;
import com.pilot.jword.JWordDocument;
import com.pilot.jword.JWordEditorKit;
import com.pilot.jword.JWordTextPane;

public class TextfeldJWord extends JWordTextPane {
	public static JWordEditorKit editorKit = new JWordEditorKit();

	TextfeldJWord() {
		super((JWordDocument) editorKit.createDefaultDocument());
		setViewMode(JWordTextPane.VM_NORMAL, true);
		setEditorKit(editorKit);
		((JWordDocument) getDocument()).init();
	}

	TextfeldJWord(String plainText, int orientation) {
		setPlainText(plainText, orientation);
	}

	public void setPlainText(String plainText) {
		setPlainText(plainText, StyleConstants.ALIGN_LEFT);
	}

	public void setPlainText(String plainText, int orientation) {
		SimpleAttributeSet align = new SimpleAttributeSet();
		StyleConstants.setAlignment(align, orientation);

		try
		{
			insertString(0, plainText, align);
			((JWordDocument) getDocument()).setParagraphAttributes(0, plainText.length(), align, false);
		}
		catch(BadLocationException e)
		{
			e.printStackTrace();
		}

	}
	
}
